<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<?import javafx.scene.image.Image?>
<GridPane fx:controller="controllers.NoteController" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints percentWidth="15"/>
        <ColumnConstraints/>
    </columnConstraints>

    <GridPane style="-fx-background-color: #1E3E59;" GridPane.columnIndex="0" GridPane.vgrow="ALWAYS">
        <Button fx:id="HomeButton" text="Home" textFill="white" style="-fx-background-color: black"
                GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" maxHeight="1.7976931348623157E308"
                maxWidth="1.7976931348623157E308" onAction="#goToHome">
            <graphic>
                <ImageView fitHeight="50" fitWidth="70">
                    <image>
                        <Image url="/images/home1.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="ButtonEDT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                style="-fx-background-color: white;" text="EDT" wrapText="true" GridPane.hgrow="ALWAYS"
                GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" onAction="#goToEDT">
            <GridPane.margin>
                <Insets top="20.0"/>
            </GridPane.margin>
            <padding>
                <Insets bottom="10.0" top="10.0"/>
            </padding>
        </Button>

        <Button fx:id="ButtonBlocNotes" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                style="-fx-background-color: white;" text="Notes" wrapText="true" GridPane.hgrow="ALWAYS"
                GridPane.rowIndex="2" GridPane.vgrow="ALWAYS" onAction="#goToBlocNotes">
            <GridPane.margin>
                <Insets top="20.0"/>
            </GridPane.margin>
            <padding>
                <Insets bottom="10.0" top="10.0"/>
            </padding>
        </Button>

        <Button fx:id="ButtonToDoListe" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                style="-fx-background-color: white;" text="ToDoList" wrapText="true" GridPane.hgrow="ALWAYS"
                GridPane.rowIndex="3" GridPane.vgrow="ALWAYS" onAction="#goToToDoListe">
            <GridPane.margin>
                <Insets top="20.0"/>
            </GridPane.margin>
            <padding>
                <Insets bottom="10.0" top="10.0"/>
            </padding>
        </Button>

        <columnConstraints>
            <ColumnConstraints/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="25"/>
            <RowConstraints percentHeight="25"/>
            <RowConstraints percentHeight="25"/>
            <RowConstraints percentHeight="25"/>
        </rowConstraints>
        <padding>
            <Insets bottom="30.0" left="10.0" right="10.0" top="30.0"/>
        </padding>
    </GridPane>


    <GridPane GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">

        <rowConstraints>
            <RowConstraints percentHeight="10"/>
            <RowConstraints/>
        </rowConstraints>


        <GridPane style="-fx-background-color: #A84011;" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0">
            <columnConstraints>
                <ColumnConstraints percentWidth="10"/>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="20"/>
                <ColumnConstraints percentWidth="20"/>
            </columnConstraints>

            <Button text="&lt;" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS"
                    GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS" onAction="#goToBlocNotes">
                <GridPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </Button>
            <Text fill="WHITE" text="Titre Note" GridPane.columnIndex="1" GridPane.halignment="LEFT">
                <font>
                    <Font size="40"/>
                </font>
                <GridPane.margin>
                    <Insets left="10.0"/>
                </GridPane.margin>
            </Text>
            <Button fx:id="ButtonDelete" text="Supprimer" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS"
                    GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS" onAction="#deleteNote">
                <GridPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </Button>
            <Button fx:id="ButtonExport" text="Exporter en .txt" GridPane.columnIndex="3" GridPane.halignment="CENTER"
                    GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS" onAction="#export">
                <GridPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </Button>
            <rowConstraints>
                <RowConstraints/>
            </rowConstraints>

        </GridPane>

        <TextArea GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS"/>
        <columnConstraints>
            <ColumnConstraints/>
        </columnConstraints>

    </GridPane>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>


</GridPane>
